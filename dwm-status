hdd(){
    hd="$(df -h / | awk 'END {print $5}')"
        echo -en "\x08$hd\x01"
    #hd=( $(awk '
    #    {i=$5} /boot/ {a=i}; /root/ {b=i}; /home/ {c=i}; /media/ {d=i}
    #    END {if (NR==10) print a,b,c,d; else print a,b}
    #           ' <(df -P)) )
    #drives="${#hd[@]}"
    #if [[ "$drives" -eq 3 ]]; then
    #    echo -e "\x08${hd[@]}\x01"
    #else
    #    echo -e "\x08${hd[@]:0:3} \x06${hd[@]:3:1}\x01"
    #fi
}

eml(){
    maildirs="$HOME/Mail/*/INBOX/new/"
    ml="$(find $maildirs -type f | wc -l)"
    if [[ "$ml" -eq 0 ]]; then
        echo "0"
    else
        echo -en "\x03$ml\x01"
    fi
}

pac(){
    pup="$(pacman -Qqu --dbpath /tmp/checkup-db-frank604/ | wc -l)"
    if [[ "$pup" -eq 0 ]]; then
        echo "0"
    else
        echo -en "\x05$pup\x01"
    fi
}

ups(){
    ups="$(awk '$0 !~ /tamsyn/' /tmp/aurupdates* | wc -l)"
    if [[ "$ups" -eq 0 ]]; then
        echo "0"
    else echo -en "\x05$ups\x01"
    fi
}

aur(){
     aur="$(awk '$0 !~ /^No /' /tmp/aurphans* | wc -l)"
     if [[ "$aur" -gt 0 ]]; then
        echo -en "\x03âˆ†\x01"
    else echo -en " " 
    fi
}

int(){
    host google.com>/dev/null &&
    echo -e "\x06ON\x01" || echo -e "\x03NO\x01"
}

dte(){
    dte="$(date "+%I:%M")"
    echo -e "\x02$dte\x01"
}

mon(){
    brt="$(xbacklight | awk -F '.' '{ print $1 }')"
    echo -e "\x01MON \x07${brt}%\x01"
}

vol(){
    #level="$(awk -F"[][]" '/dB/ {print $2}' <(amixer get Master))"
    mix=`amixer get Master | tail -1`
    vol="$(amixer get Master | tail -n1 | sed -r 's/.*\[(.*)%\].*/\1/')" 
   if [[ $mix == *\[off\]* ]]; then
     #red 9
     echo -e "  \x01VOL \x03OFF\x01"
   elif [[ $mix == *\[on\]* ]]; then
     #green 2
     echo -e "  \x01VOL \x07${vol}%\x01"
   else
     #yellow3
     echo -e "  \x01VOL \x04---\x01"
   fi
}

# Pipe to status bar
# xsetroot -name "$(music) $(bat) | CPU $(cpu) MEM $(mem) | HDD $(hdd) $(mon) | $(eml) $(pac) $(ups)$(aur)|$(vol) | $(int) | $(dte) "
xsetroot -name "$(music) $(bat) | MEM $(mem) HDD $(hdd) $(mon) | $(eml) $(pac) $(ups)$(aur)|$(vol) | $(int) | $(dte) "
